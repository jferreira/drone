<div class="container">

  <div class="row">
  <div class="col-xs-8-offset-4 col-sm-4-offset-4 col-sm-4-offset-4">
    <br>

    <%= simple_form_for [@package] do |f| %>

      <P>Please add a feature giff image below</p>
       <!-- f.input :url_image %> -->
      <%= f.input :photo  %>
      <%= f.input :photo_cache, as: :hidden %>

      <p>Please add package type: i.e Basic, Premium</p>
      <%= f.input :title, placeholder: 'Premium Package' %>

      <p>In one line describe your drone package</p>
      <%= f.input :description, placeholder: '$75 for 1hr flight time' %>

      <p>What is your hourly rate</p>
      <%= f.input :price, placeholder: '$75' %>

      <p>Please describe what is included</p>
      <%= f.input :content, placeholder: 'Some info about your package' %>

      <%= f.submit 'Create package', class: "btn btn-primary" %>
    <% end %>

    <br>
    <%= link_to 'All packages', packages_path, class: "btn btn-default" %>

  </div>
  </div>
</div>

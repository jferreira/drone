<!-- THE LIST OF PACKAGES ----------------------------- -->
<div class="container">
  <div class="row">

      <% @packages.each do |package|%>
        <div class="col-xs-12 col-sm-4 col-md-4">



          <% if package.photo.blank? %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%=package.url_image %>');">

            <% else %>
              <div class="card"
                style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
               url('<%= cl_image_path package.photo, height: 300, width: 400, crop: :fill %>')">

            <% end %>
              <div class="card-category">
                <%=package.title %>
              </div>

              <div class="card-description">
                <p><%=package.description %></p>
                <!-- <p>Very cool city, the best</p> -->
              </div>

              <img class="card-user" src=<%=package.url_image %>
              >
              <%= link_to 'See details', package_path(package), class:"card-link"  %>
              </div>
            </div>

          <% end %>

        <div class="col-xs-12 col-sm-4 col-md-4">
          <div class="card" linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.2));">

            <div class="card-category">
              </p>Add Package</p>
            </div>

            <div class="card-description">
              <p>Upload your own package</p>
            </div>

            <%= link_to '', new_package_path, class:"card-link"  %>

        </div>

      </div>
  </div>
</div>

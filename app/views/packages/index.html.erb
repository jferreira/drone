<div class="container">
  <div class="row">
    <!-- LIST ------------ -->
    <% @packages.each do |package|%>
      <div class="col-xs-12 col-sm-4 col-md-4">

    </div>
    <% end %>
  </div>
</div>

<!-- MAPS ------------ -->
<div class="container">
  <div class="row">

   <div class="col-xs-8">
      <div class="row">
        <% @packages.each do |package|%>
          <div class="col-xs-8 col-sm-4 col-md-4">
            <%= render "packages/card", package: package %>
          </div>
        <% end %>

          <%= render "packages/new_package_link" %>

      </div>
    </div>


    <div class="col-sm-4">
      <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
      >
      </div>
    </div>
</div>

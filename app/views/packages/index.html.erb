

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://s3-us-west-2.amazonaws.com/hispotion-prod/wp-content/uploads/2015/09/surf-video-759x500.jpg');">
  <div class="banner-content">
    <h1>Packages</h1>
    <p>drones are banging</p>
<!--     <a class="btn btn-primary btn-lg">Start now</a> -->
  </div>
</div>

<div class="container">
  <div class="row">

      <% @packages.each do |package|%>
        <div class="col-xs-12 col-sm-4 col-md-4">

            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%=package.url_image %>');">
                <div class="card-category"><%=package.title %></div>
                <div class="card-description">
                  <p><%=package.description %></p>
                  <!-- <p>Very cool city, the best</p> -->
                </div>
                <img class="card-user" src=<%=package.url_image %>
                >

                <%= link_to 'See details', package_bookings_path(package), class:"card-link"  %>
            </div>

        </div>
      <% end %>

              <div class="col-xs-12 col-sm-4 col-md-4">

            <div class="card" linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.2));">
                <div class="card-category"></p>Add Package</p></div>

                <div class="card-description">
                  <p>Upload your own package</p>
                </div>

                <%= link_to '', new_package_path, class:"card-link"  %>

            </div>

        </div>




  </div>
</div>

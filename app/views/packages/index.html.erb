<div class="container">
  <div class="row text-center ">

    <h2>Find an operator</h2>

      <div class="col-lg-4">
        <div
          id="map"
          style="width: 100%;
          height: 600px;"
          data-markers="<%= @markers.to_json %>"
          >
        </div>
      </div>

  </div>
</div>

<div class="container">
  <div class="row">

    <h2>Browse Packages</h2>

        <% @packages.each do |package|%>

          <div class="col-xs-8 col-sm-6 col-md-10">

            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://i.gifer.com/TwM4.gif')";>
              <div class="card-category"><%= package.location %></div>
                <div class="card-description">
                  <h2><%= package.title %></h2>
                  <p><%= package.description %></p>
                </div>

                <% if package.user %>
                  <img class="card-user" src="<%= package.user.url_image %>" class="avatar dropdown-toggle" id="navbar-wagon-menu">
                <% else %>
                  <img class="card-user" src="http://www.buckinghamandcompany.com.au/wp-content/uploads/2016/03/profile-placeholder.png" class="avatar dropdown-toggle" id="navbar-wagon-menu">
                <% end %>
                <a class="card-link" href="#" ></a>
            </div>
            <%= link_to 'See details', package_path(package), class:"card-link"  %>
          </div>

      <% end %>

    <%= render "packages/new_package_link" %>

  </div>
</div>

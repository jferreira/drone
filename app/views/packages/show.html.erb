<div class="banner-half" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://s3-us-west-2.amazonaws.com/hispotion-prod/wp-content/uploads/2015/09/surf-video-759x500.jpg');">
  <div class="banner-content">
    <h1><%= @package.title %></h1>
    <p><%= @package.description %></p>
    <%= link_to 'Book Package', new_package_booking_path(@package), class: "btn btn-primary" %>
  </div>
</div>



<div class="container">

    <div class="text-center">
      <div class="row  col-xs-6 col-sm-4 col-md-4">

      <img src="<%= @package.url_image %>" alt="" class="package-image">

      <div class="package-content">

      <h2>Package Name:</h2>
      <p class="package-title">  <%= @package.title %> </p>

      <h2>Description:</h2>
      <p class="package-description"> <%= @package.description %> </p>

      <h2>Price:</h2>
      <p class="package-title">$ <%= @package.price %> </p>

      </div>

    </div>
    <br>
    <%= link_to 'All Packages', packages_path(@package), class: "btn btn-default" %>

    </div>
</div>














